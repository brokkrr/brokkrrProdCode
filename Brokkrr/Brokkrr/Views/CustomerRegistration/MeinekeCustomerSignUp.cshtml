                                <hr id="hrFirstName" class="hr" />
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger", style = "float: left;margin-top: 1%;" })
                            </div>
                        </div>
                        <div class="col-lg-1 col-md-1">
                            <span style="padding:1px;"></span>
                        </div>
                        <div class="col-lg-5 col-md-5">
                            <br />
                            <span class="detailslabel">
