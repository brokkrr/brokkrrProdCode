                /*background-color:rgb(72,205,255);*/
                color: #fff;
            }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            color: rgb(72,205,255);
            min-width: 160px;
            overflow: auto;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                /*color: black;*/
                color: rgb(72,205,255);
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

        .dropdown a:hover {
            /*background-color: #f1f1f1;*/
            background-color: rgb(72,205,255);
            color: #fff;
        }

        .show {
            display: block;
        }


      

       
