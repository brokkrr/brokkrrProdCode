    <script>
        var count = 0;
        /* When the user clicks on the button,
        toggle between hiding and showing the dropdown content */
        function myFunction() {

            if (count == 0) {
                $('#myDropdown').fadeIn('slow');
                count++;

            }
            else {
                $('#myDropdown').fadeOut('slow');
                count--;

            }

        }
        window.onclick = function (event) {
            $('#myDropdown').fadeOut('slow');
        }
    </script>

    <style>
        .dropbtn {
            /*background-color: #4CAF50;*/
